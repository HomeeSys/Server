{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "devices-route": {
        "ClusterId": "devices-cluster",
        "Match": {
          "Path": "/devices-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "measurements-route": {
        "ClusterId": "measurements-cluster",
        "Match": {
          "Path": "/measurements-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "raports-route": {
        "ClusterId": "raports-cluster",
        "Match": {
          "Path": "/raports-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "devices-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://devices.api:8080/"
          }
        }
      },
      "measurements-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://measurements.api:8080/"
          }
        }
      },
      "raports-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://raports.api:8080/"
          }
        }
      }
    }
  }
}
